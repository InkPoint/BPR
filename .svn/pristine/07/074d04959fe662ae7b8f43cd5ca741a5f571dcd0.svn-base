<!DOCTYPE html>
<html lang="zh" xmlns:th="http://www.thymeleaf.org" >
<head>
	<th:block th:include="include :: header('新增发运')" />
	<th:block th:include="include :: select2-css"/>
</head>
<body class="white-bg">
	<div class="wrapper wrapper-content animated fadeInRight ibox-content">
		<form class="form-horizontal m" id="form-cardespatch-add">
			<div class="form-group">
				<label class="col-sm-3 control-label">合同编号(TL-X-)：</label>
				<div class="col-sm-8">
					<div class="input-group">
						<select name="pactCode" class="form-control">
							<option th:each="dict:${pactList}"
									th:value="${dict.pactID}"
									th:text="${dict.pactCode}"></option>
						</select>
					</div>
				</div>
			</div>
			<div class="form-group">
				<label class="col-sm-3 control-label "><span style="color: red; ">*</span>发运量(台)：</label>
				<div class="col-sm-8">
					<input class="form-control" type="text" name="despatchAmount" required>
				</div>
			</div>
			<div class="form-group">
				<label class="col-sm-3 control-label">备注：</label>
				<div class="col-sm-8">
					<textarea id="remark" name="remark" class="form-control"></textarea>
				</div>
			</div>
		</form>
	</div>
	<th:block th:include="include :: footer" />
	<th:block th:include="include :: select2-js"/>
	<script type="text/javascript">
		var prefix = ctx + "vehicle/cardespatch";
	    
		$("#form-cardespatch-add").validate({
			onkeyup: false,
			rules:{
				postCode:{
					number:true,
					count:true
				}
			},
		    focusCleanup: true
		});
		
		function submitHandler() {
	        if ($.validate.form()) {
	        	$.operate.save(prefix + "/add", $('#form-cardespatch-add').serialize());
	        }
	    }
	</script>
</body>
</html>
