<!DOCTYPE html>
<html lang="zh" xmlns:th="http://www.thymeleaf.org" xmlns:shiro="http://www.pollix.at/thymeleaf/shiro">
<head>
    <th:block th:include="include :: header('车辆库存')"/>
    <th:block th:include="include :: bootstrap-select-css"/>
</head>
<body class="gray-bg">
<div class="container-div">
    <div class="row">
        <div class="col-sm-12 search-collapse">
            <form id="repertory-form">
                <div class="select-list">
                    <ul>
                        <li>
                            <label>车辆类别：</label><select name="CategoryCode"
                                                        th:with="type=${@dict.getType('dm_cx_carCategory')}">
                            <option value="">所有</option>
                            <option th:each="dict : ${type}" th:text="${dict.dictLabel}"
                                    th:value="${dict.dictValue}"></option>
                        </select>
                        </li>
                        <li>
                            <label>协议编号： </label>
                            <input type="text" name="techNo"/>
                        </li>
                        <li class="select-time">
                            <label>入库日期： </label>
                            <input type="text" class="time-input" id="startTime" placeholder="开始时间"
                                   name="params[beginTime]"/>
                            <span>-</span>
                            <input type="text" class="time-input" id="endTime" placeholder="结束时间"
                                   name="params[endTime]"/>
                        </li>
                        <li>
                            <a class="btn btn-primary btn-rounded btn-sm" onclick="searchPre()"><i
                                    class="fa fa-search"></i>&nbsp;搜索</a>
                            <a class="btn btn-warning btn-rounded btn-sm" onclick="resetPre()"><i
                                    class="fa fa-refresh"></i>&nbsp;重置</a>
                        </li>
                    </ul>
                </div>
            </form>
        </div>

        <div class="btn-group-sm" id="toolbar" role="group">
            <a class="btn btn-warning" onclick="$.table.exportExcel()" shiro:hasPermission="vehicle:repertory:export">
                <i class="fa fa-download"></i> 导出
            </a>
        </div>

        <div class="col-sm-12 select-table table-striped">
            <table id="bootstrap-table" class="text-nowrap" data-mobile-responsive="true"></table>
        </div>
    </div>
</div>

<th:block th:include="include :: footer"/>
<th:block th:include="include :: bootstrap-select-js"/>
<script th:inline="javascript">
    var prefix = ctx + "vehicle/repertory";

    $(function () {
        var options = {
            url: prefix + "/list",
            exportUrl: prefix + "/export",
            sortName: "offlineDate",
            sortOrder: "desc",
            modalName: "车辆库存",
            escape: true,
            showPageGo: true,
            rememberSelected: true,
            showFooter: true,
            sidePagination: "client",
            pageSize: 10,
            pageList: [10, 25, 50],
            columns: [{
                field: 'state',
                checkbox: true,
                footerFormatter: function () {
                    var gross = $("#bootstrap-table").bootstrapTable("getData").length;
                    return "总库存：" + gross + " 台";
                }
            },
                {
                    field: 'archivesID',
                    title: '编号'
                },
                {
                    field: 'contractNo',
                    title: '合同编号'
                },
                {
                    field: 'techNo',
                    title: '技术协议'
                },
                {
                    field: 'categoryName',
                    title: '车辆类别'
                },
                {
                    field: 'seriesName',
                    title: '车型系列'
                },
                {
                    field: 'levelName',
                    title: '车型级别'
                },
                {
                    field: 'modelName',
                    title: '车辆型号'
                },
                {
                    field: 'vahicleModel',
                    title: '销售车型号'
                },
                {
                    field: 'vahicleNo',
                    title: '车辆编号'
                },
                {
                    field: 'frameNo',
                    title: '车架号'
                },
                {
                    field: 'offlineDate',
                    title: '入库日期',
                    sortable: true
                },
                {
                    field: 'publishPerson',
                    title: '入库审批人员'
                },
                {
                    field: 'bS1',
                    title: '发车备注'
                },
                {
                    field: 'remark',
                    title: '备注'
                }]
        };
        $.table.init(options);
    });

    function searchPre() {
        var data = {};
        $.table.search('repertory-form', data);
    }

    function resetPre() {
        $.form.reset();
        $("#carCategory").selectpicker('refresh');
    }
</script>
</body>
</html>